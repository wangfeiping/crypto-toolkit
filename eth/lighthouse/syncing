#!/bin/bash

#
# curl https://raw.githubusercontent.com/WALL-E/static/master/eth/lighthouse/syncing | bash
#
# wget https://raw.githubusercontent.com/WALL-E/static/master/eth/lighthouse/syncing -O syncing
#
# lighthouse beacon API
# 
# syncing
#

set -e
set -x

curl -X GET "http://localhost:5052/lighthouse/syncing" \
-H  "accept: application/json" | jq

curl -X GET "http://localhost:5052/lighthouse/eth1/syncing" \
-H  "accept: application/json" | jq
