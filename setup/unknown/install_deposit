#/bin/bash

#
# curl https://raw.githubusercontent.com/WALL-E/static/master/setup/ubuntu/install_deposit | bash
#
# wget https://raw.githubusercontent.com/WALL-E/static/master/setup/ubuntu/install_deposit -O install_deposit
#
# Deposit
#
# 
# Beacon explorer
#
# https://prater.beaconcha.in/validator/0xb5c443f21bbf4b70dd98c4a24dafb75a12ca6e8557c223e92db9915372bb9f14d4f58e196abae02df3a0b9e981819485#deposits
#


cd ~
wget https://github.com/ethereum/eth2.0-deposit-cli/releases/download/v1.2.0/eth2deposit-cli-256ea21-linux-amd64.tar.gz

tar zxvf eth2deposit-cli-256ea21-linux-amd64.tar.gz
mv eth2deposit-cli-256ea21-linux-amd64/deposit .

echo "./deposit new-mnemonic --num_validators 1 --chain mainnet"
echo "./deposit existing-mnemonic --num_validators 1 --chain mainnet"

echo
echo "Everything is fine"
