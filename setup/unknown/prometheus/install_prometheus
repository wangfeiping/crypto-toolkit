#/bin/bash

#
# curl https://raw.githubusercontent.com/WALL-E/static/master/setup/unknown/prometheus/install_prometheus | bash
#
# wget https://raw.githubusercontent.com/WALL-E/static/master/setup/unknown/prometheus/install_prometheus -O install_prometheus
#
# Prometheus
#
#
# Grafana
#
# wget https://dl.grafana.com/oss/release/grafana-8.1.2-1.x86_64.rpm
# yum install grafana-8.1.2-1.x86_64.rpm -y
# systemctl start grafana-server
# systemctl enable grafana-server
#

set -e
set -x

APP="Prometheus"
VERSION="2.29.1"
ROOT="/opt"
PREFIX="$ROOT/prometheus-${VERSION}.linux-amd64"
BIN="$PREFIX/prometheus"
USER="prometheus"
GROUP="prometheus"
SERVICE="prometheus"
SYSTEMD="/usr/lib/systemd/system/$SERVICE.service"


# Condition check

role=`id -u`
if test $role -ne 0
then
    echo "You install package which requires root privileges"
    exit 1
fi


# Create user

if id "$USER" >/dev/null 2>&1
then
    echo "User $USER exists"
else
    useradd --system --no-create-home --shell /sbin/nologin $USER
fi

# Download package

if [ -f "$BIN" ]
then
    echo "$BIN already exists"
    exit 1
fi

cd ~
wget https://github.com/prometheus/prometheus/releases/download/v${VERSION}/prometheus-${VERSION}.linux-amd64.tar.gz
tar --no-same-owner -zxvf prometheus-${VERSION}.linux-amd64.tar.gz -C $ROOT
rm -f prometheus-${VERSION}.linux-amd64.tar.gz

mkdir -p $PREFIX/data
chown $USER:$GROUP $PREFIX -R


# Create systemd service

if [ -f "$SYSTEMD" ]
then
    echo "$SYSTEMD already exists"
    exit 1
fi

cat > $SYSTEMD <<EOF
[Unit]
Description=$APP
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User=$USER
Group=$GROUP
Restart=always
RestartSec=5
ExecStart=$BIN \
  --config.file="$PREFIX/prometheus.yml" \
  --storage.tsdb.retention.time=39d \
  --storage.tsdb.path=$PREFIX/data

[Install]
WantedBy=multi-user.target
EOF

systemctl daemon-reload
systemctl enable $SERVICE

echo
echo "systemctl start $SERVICE"
echo "systemctl stop $SERVICE"
echo "journalctl -f -u $SERVICE"

echo
$BIN --version

echo
echo "Everything is fine"
