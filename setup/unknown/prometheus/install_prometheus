#/bin/bash

#
# curl https://raw.githubusercontent.com/WALL-E/static/master/setup/unknown/prometheus/install_prometheus | bash
#
# wget https://raw.githubusercontent.com/WALL-E/static/master/setup/unknown/prometheus/install_prometheus -O install_prometheus
#
# Prometheus
#
#
# Grafana
#
# wget https://dl.grafana.com/oss/release/grafana-8.1.2-1.x86_64.rpm
# yum install grafana-8.1.2-1.x86_64.rpm -y
# systemctl start grafana-server
# systemctl enable grafana-server
#

set -e
set -x

# Condition check

role=`id -u`
if test $role -ne 0
then
    echo "You install package which requires root privileges"
    exit 1
fi


# Download package

VERSION=2.29.1

if [ ! -f "/apps/prometheus/prometheus" ]
then
    cd ~
    wget https://github.com/prometheus/prometheus/releases/download/v${VERSION}/prometheus-${VERSION}.linux-amd64.tar.gz

    tar --no-same-owner -zxvf prometheus-${VERSION}.linux-amd64.tar.gz -C /opt

    rm -f prometheus-${VERSION}.linux-amd64.tar.gz
fi

# Create user

useradd --system --no-create-home --shell /sbin/nologin prometheus

mkdir -p /opt/prometheus-${VERSION}.linux-amd64/data
chown prometheus:prometheus /opt/prometheus-${VERSION}.linux-amd64 -R


# Create systemd service

cat > /usr/lib/systemd/system/prometheus.service <<EOF
[Unit]
Description=Prometheus
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User=prometheus
Group=prometheus
Restart=always
RestartSec=5
ExecStart=/opt/prometheus-${VERSION}.linux-amd64/prometheus \
  --config.file="/apps/prometheus-${VERSION}.linux-amd64/prometheus.yml" \
  --storage.tsdb.retention.time=39d \
  --storage.tsdb.path=/apps/prometheus/data/

[Install]
WantedBy=multi-user.target
EOF

systemctl daemon-reload
systemctl enable prometheus

echo
echo "systemctl start prometheus"
echo "systemctl stop prometheus"
echo "journalctl -f -u prometheus"

echo
/opt/prometheus-${VERSION}.linux-amd64/prometheus --version

echo
echo "Everything is fine"
