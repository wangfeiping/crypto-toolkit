#/bin/bash

#
# curl https://raw.githubusercontent.com/WALL-E/static/master/setup/unknown/prometheus/install_node_exporter | bash
#
# wget https://raw.githubusercontent.com/WALL-E/static/master/setup/unknown/prometheus/install_node_exporter -O install_node_exporter
#
# node_exporter
#
#

set -e
set -x

APP="node_exporter"
VERSION="1.2.2"
BIN="/usr/local/bin/node_exporter"
USER="node-exporter"
GROUP="node-exporter"
SERVICE="node_exporter"
SYSTEMD="/usr/lib/systemd/system/$SERVICE.service"


# Condition check

role=`id -u`
if test $role -ne 0
then
    echo "You install package which requires root privileges"
    exit 1
fi


# Create user

if id "$USER" >/dev/null 2>&1; then
    echo "User $USER exists"
    exit 1
fi

useradd --system --no-create-home --shell /sbin/nologin $USER


# Download package

if [ -f "$BIN" ]
then
    echo "$BIN already exists"
    exit 1
fi

cd ~
wget https://github.com/prometheus/node_exporter/releases/download/v${VERSION}/node_exporter-${VERSION}.linux-amd64.tar.gz
      
tar --no-same-owner -zxvf node_exporter-${VERSION}.linux-amd64.tar.gz
mv node_exporter-${VERSION}.linux-amd64/node_exporter /usr/local/bin/
    
rm -f node_exporter-${VERSION}.linux-amd64.tar.gz
rm -rf node_exporter-${VERSION}.linux-amd64/


# Create systemd service

if [ -f "$SYSTEMD" ]
then
    echo "$SYSTEMD already exists"
    exit 1
fi

cat > $SYSTEMD <<EOF
[Unit]
Description=$APP
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User=$USER
Group=$GROUP
Restart=always
RestartSec=5
ExecStart=$BIN \
  --config.file="$PREFIX/prometheus.yml" \
  --storage.tsdb.retention.time=39d \
  --storage.tsdb.path=$PREFIX/data

[Install]
WantedBy=multi-user.target
EOF

systemctl daemon-reload
systemctl enable $SERVICE

echo
echo "systemctl start $SERVICE"
echo "systemctl stop $SERVICE"
echo "journalctl -f -u $SERVICE"

echo
$BIN --version

echo
echo "Everything is fine"
