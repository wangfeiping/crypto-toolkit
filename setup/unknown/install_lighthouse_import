#/bin/bash

#
# curl https://raw.githubusercontent.com/WALL-E/eth-toolkit/master/setup/unknown/install_lighthouse_import | bash
#
# wget https://raw.githubusercontent.com/WALL-E/eth-toolkit/master/setup/unknown/install_lighthouse_import -O install_lighthouse_import
#
# Lighthouse Import
#

echo "lighthouse account validator import --datadir /var/lib/lighthouse --network mainnet --directory $HOME"
echo
echo "chown -R lighthousevalidator:lighthousevalidator /var/lib/lighthouse/validators"
echo
echo "cat /var/lib/lighthouse/validators/validator_definitions.yml"
echo
echo "lighthouse account validator list --network mainnet --datadir /var/lib/lighthouse"
echo
