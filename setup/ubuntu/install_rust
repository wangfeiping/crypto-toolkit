#/bin/bash

# 
# curl https://raw.githubusercontent.com/WALL-E/static/master/setup/ubuntu/install_rust | bash
#
#
# rust
#

set -e
set -x

role=`id -u`
if test $role -ne 0
then
    echo "You install Docker which requires root privileges"
    exit 1
fi

apt install -y curl

curl https://sh.rustup.rs -sSf | sh

$HOME/.cargo/bin/rustc

echo
echo "rust is fine"
